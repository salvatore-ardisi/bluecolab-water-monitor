# =============================================================================
# BlueColabApp - Local Properties Template
# =============================================================================
#
# INSTRUCTIONS:
# 1. Copy this file to 'local.properties'
# 2. Replace placeholder values with your actual values
# 3. NEVER commit local.properties to version control
#
# =============================================================================

# Android SDK location (required)
# Replace with your actual SDK path
sdk.dir=/path/to/your/Android/sdk

# Examples:
# macOS: sdk.dir=/Users/YOUR_USERNAME/Library/Android/sdk
# Windows: sdk.dir=C\:\\Users\\YOUR_USERNAME\\AppData\\Local\\Android\\Sdk
# Linux: sdk.dir=/home/YOUR_USERNAME/Android/Sdk

# =============================================================================
# FIREBASE CONFIGURATION (if not using google-services.json)
# =============================================================================
# These are optional - primarily used if you want to inject via BuildConfig
# instead of using google-services.json

# FIREBASE_API_KEY=your_firebase_api_key_here
# FIREBASE_PROJECT_ID=your_project_id_here
# FIREBASE_DATABASE_URL=https://your-project.firebaseio.com
# FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# =============================================================================
# SIGNING CONFIGURATION (for release builds)
# =============================================================================
# STORE_FILE=/path/to/your/keystore.jks
# STORE_PASSWORD=your_store_password
# KEY_ALIAS=your_key_alias
# KEY_PASSWORD=your_key_password
